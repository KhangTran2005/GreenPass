<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimaryVariant"
    tools:context=".utils.SplashActivity">

    <ImageView
        android:id="@+id/greenpass_img"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:src="@drawable/ic_baseline_credit_card_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/mint_200" />

    <TextView
        android:id="@+id/greenpass_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Green Pass"
        android:textColor="@color/mint_200"
        android:textAppearance="?attr/textAppearanceHeadline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/greenpass_img" />

</androidx.constraintlayout.widget.ConstraintLayout>