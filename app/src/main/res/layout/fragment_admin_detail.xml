<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionName="@string/admin_card_detail_transition_name"
    >
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        android:layout_gravity="center"
        app:cardElevation="3dp"
        app:strokeWidth="3dp"
        app:strokeColor="?attr/colorPrimaryVariant"
        app:cardCornerRadius="12dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        tools:ignore="HardcodedText, RtlSymmetry">

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="8dp"
            android:textAppearance="?attr/textAppearanceHeadline4"
            />
        <TextView
            android:id="@+id/id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="8dp"
            android:textAppearance="?attr/textAppearanceHeadline5"
            />

        <RelativeLayout
            android:layout_marginStart="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vaccinated"
                android:layout_centerVertical="true"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                />
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/vaccination_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:scaleX=".75"
                android:scaleY=".75"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:drawableLeft="@drawable/ic_baseline_arrow_right_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: "
                android:layout_marginStart="12dp"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                />

            <TextView
                android:id="@+id/vacc_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="vacc_date_date"
                android:layout_marginStart="12dp"
                android:textStyle="italic"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            <TextView
                android:drawableLeft="@drawable/ic_baseline_arrow_right_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Place: "
                android:layout_marginStart="12dp"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                />

            <TextView
                android:id="@+id/vacc_place_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="vacc_place"
                android:textStyle="italic"
                android:layout_marginStart="12dp"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_marginStart="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin"
                android:layout_centerVertical="true"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                />
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/admin_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:scaleX=".75"
                android:scaleY=".75"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginStart="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Officer"
                android:layout_centerVertical="true"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                />
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/cop_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:scaleX=".75"
                android:scaleY=".75"
                />
        </RelativeLayout>

    </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</ScrollView>