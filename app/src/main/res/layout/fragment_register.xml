<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".ui.main.OCR">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_person_24"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:background="@android:color/darker_gray"
                />

            <LinearLayout
                android:paddingTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name: "
                    android:paddingEnd="5dp"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    />

                <EditText
                    android:id="@+id/user_regis_input"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="Human Person"
                    android:paddingStart="5dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pass_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password: "
                    android:paddingEnd="5dp"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    />

                <EditText
                    android:id="@+id/password_regis_input"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:hint="Password"
                    android:paddingStart="5dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/name_layout"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name: "
                    android:paddingEnd="5dp"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    />

                <EditText
                    android:id="@+id/name_input"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="Perry The Person"
                    android:paddingStart="5dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/age_layout"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age: "
                    android:paddingEnd="5dp"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    />

                <EditText
                    android:id="@+id/age_input"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="69"
                    android:paddingStart="5dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dob_layout"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DoB: "
                    android:paddingEnd="5dp"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    />

                <EditText
                    android:id="@+id/DoB_input"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="7-12-1941"
                    android:paddingStart="5dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/gender_layout"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sex: "
                    android:paddingEnd="5dp"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    />

                <EditText
                    android:id="@+id/sex_input"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="Male"
                    android:paddingStart="5dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/nationality_layout"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nationality: "
                    android:paddingEnd="5dp"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    />

                <EditText
                    android:id="@+id/nationality_input"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="German"
                    android:paddingStart="5dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/nric_layout"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NRIC/FIN: "
                    android:paddingEnd="5dp"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    />

                <EditText
                    android:id="@+id/nric_input"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="G6712127X"
                    android:paddingStart="5dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/expandDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                />

            <Button
                android:id="@+id/scan_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scan NRIC/FIN"
                android:layout_gravity="center"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/register_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:layout_gravity="center"
                android:textStyle="bold"
                />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>